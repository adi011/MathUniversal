<Page
    x:Class="MathUniversal.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MathUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding Source={StaticResource Locator}, Path=Start}"
    mc:Ignorable="d">
    <Grid Background="#3F53ff">
        <StackPanel VerticalAlignment="Center">
            <Button Margin="10" HorizontalAlignment="Center" Content="Expresion"  Foreground="#8B97FF" Background="#464C7F" Command="{Binding NavigateToExpressions}" />
            <Button Margin="10" HorizontalAlignment="Center" Content="Matrix"  Foreground="#8B97FF" Background="#464C7F" Command="{Binding NavigateToMatrix}" />
            <Button Margin="10" HorizontalAlignment="Center" Content="The system of equations" Foreground="#8B97FF" Background="#464C7F" Command="{Binding NavigateToTheSystemOfEquations}"/>
        </StackPanel>
    </Grid>
</Page>
